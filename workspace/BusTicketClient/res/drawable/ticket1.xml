<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
             <item>
                <shape android:padding="10dp" android:shape="rectangle">

                    <!-- you can use any color you want I used here gray color -->
                    <gradient android:startColor="#ff9300" 
                        	android:centerColor="#C9872C"
                        	android:endColor="#ff9300"
                        	android:angle="90"
                        />

                    <corners android:radius="5dp" />

                    <stroke android:width="1dp" android:color="#000000" />
                </shape>
                </item>
                <item android:top="10dp" android:right="10dp" android:left="100dp" android:bottom="10dp">
                <shape android:padding="5dp"  android:shape="rectangle">

                    <!-- you can use any color you want I used here gray color -->
                    <!-- <gradient android:color="#FFFFFF" /> -->
					<gradient android:startColor="#EEEEEE" 
                        	android:centerColor="#BBBBBB"
                        	android:endColor="#EEEEEE"
                        	android:angle="90"
                     />
                    <corners android:radius="15dp" />
                    <size
				        android:width="10dp"
				        android:height="10dp" />

                    <stroke android:width="1dp" android:color="#000000" />
                </shape>
                </item>
                
        </layer-list>
        
        </item>
    <item><layer-list>
            <item>
                <shape android:padding="10dp" android:shape="rectangle">

                    <!-- you can use any color you want I used here gray color -->
                    <solid android:color="#ff9300" 
                     />

                    <corners android:radius="5dp" />

                    <stroke android:width="1dp" android:color="#000000" />
                </shape>
                </item>
                <item android:top="10dp" android:right="10dp" android:left="100dp" android:bottom="10dp">
                <shape android:padding="5dp"  android:shape="rectangle">

                    <!-- you can use any color you want I used here gray color -->
                   <solid android:color="#FFFFFF"/>

                    <corners android:radius="15dp" />
                    <size
				        android:width="10dp"
				        android:height="10dp" />

                    <stroke android:width="1dp" android:color="#000000" />
                </shape>
                </item>
                
        </layer-list></item>

</selector>