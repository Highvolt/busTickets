<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark"
    android:padding="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/asdasd"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/walletTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="9dip"
                android:paddingTop="9dip"
                android:text="@string/buyTicketsTitle"
                android:textColor="@color/white1"
                android:textSize="18sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/adsdasd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/ticket1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginRight="30dp"
                        android:contentDescription="@string/img_desc"
                        android:src="@drawable/bus" />

                    <TextView
                        android:id="@+id/walletT1TypeLabel"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/walletT1Type"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/dark" />

                    <pt.fe.up.cmov.busticket.inspector.HorizontalNumberPicker
                        android:id="@+id/BuyPickerT1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical" >
                    </pt.fe.up.cmov.busticket.inspector.HorizontalNumberPicker>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/ticket1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginRight="30dp"
                        android:contentDescription="@string/img_desc"
                        android:src="@drawable/bus" />

                    <TextView
                        android:id="@+id/walletT2TypeLabel"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/walletT2Type"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/dark" />

                    <pt.fe.up.cmov.busticket.inspector.HorizontalNumberPicker
                        android:id="@+id/BuyPickerT2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical" >
                    </pt.fe.up.cmov.busticket.inspector.HorizontalNumberPicker>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/ticket1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginRight="30dp"
                        android:contentDescription="@string/img_desc"
                        android:src="@drawable/bus" />

                    <TextView
                        android:id="@+id/walletT3TypeLabel"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/walletT3Type"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/dark" />

                    <pt.fe.up.cmov.busticket.inspector.HorizontalNumberPicker
                        android:id="@+id/BuyPickerT3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical" >
                    </pt.fe.up.cmov.busticket.inspector.HorizontalNumberPicker>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/BuyButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:paddingBottom="@dimen/cenas"
                android:paddingTop="@dimen/cenas"
                android:text="@string/buyTicketsButton"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
